@model CbaSodiq.Core.ViewModels.UserViewModels.ChangeUserPasswordViewModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="wrapper">
    <!-- Navigation -->

    @Html.Partial("_SideBarMultiLevelDropdown")
    <div id="page-wrapper">

        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Change Password
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <fieldset>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.OldPass)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.OldPass, new { @class = "form-control", @type = "password" })
                                @Html.ValidationMessageFor(model => model.OldPass)
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.NewPass)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.NewPass, new { @class = "form-control", @type = "password" })
                                @Html.ValidationMessageFor(model => model.NewPass)
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.ConfirmPass)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.ConfirmPass, new { @class = "form-control", @type = "password" })
                                @Html.ValidationMessageFor(model => model.ConfirmPass)
                            </div>
                            <br />
                            <p>
                                <input type="submit" value="Save" class="btn btn-primary btn-lg btn-block" />
                            </p>
                        </fieldset>
                    }
                </div>
                <div class="panel-footer">
                    <div>
                        @ViewBag.ErrorMsg
                    </div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
        <!-- /.col-lg-4 -->
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}