@model IEnumerable<CbaSodiq.Core.Models.Node>

@{
    ViewBag.Title = "Index";
}


<div id="wrapper">
    @Html.Partial("_SideBarMultiLevelDropdown")
    <div id="page-wrapper">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HostName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IpAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Port)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HostName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IpAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Port)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ID })
            </td>
        </tr>
}

        </table>
    </div>
</div id="wrapper">