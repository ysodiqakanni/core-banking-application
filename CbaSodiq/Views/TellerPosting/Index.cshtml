@model IEnumerable<CbaSodiq.Core.Models.TellerPosting>

@{
    ViewBag.Title = "Index";
}

<div id="wrapper">

    <!-- Navigation -->    

    @Html.Partial("_SideBarMultiLevelDropdown")
    <div id="page-wrapper">
        <h2 class="text-center text-primary">TELLER POSTINGS</h2>

        <p>
            @Html.ActionLink("Post", "Post")
        </p>
        <table class="table table-bordered" id="myTable">
            <thead>
                <tr>
                    <th>Post ID</th>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerAccount.AccountName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerAccount.AccountNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PostingType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Narration)
                    </th>


                    <th>
                        Post Initiator
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID.ToString("D5")</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerAccount.AccountName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerAccount.AccountNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostingType)
                        </td>
                        <td>
                            N @item.Amount.ToString("N02")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Narration)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.PostInitiator.Username)
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    debugger;
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>

<link href="~/Scripts/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>