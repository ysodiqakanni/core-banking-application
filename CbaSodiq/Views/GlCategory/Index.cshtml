@model IEnumerable<CbaSodiq.Core.Models.GlCategory>

@{
    ViewBag.Title = "Index";
}

<div id="wrapper">
   @Html.Partial("_SideBarMultiLevelDropdown")

    <div id="page-wrapper">
        <h2 class="text-center">GL Categories</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>@Html.DisplayNameFor(model => model.MainCategory)</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>@item.MainCategory.ToString()</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>